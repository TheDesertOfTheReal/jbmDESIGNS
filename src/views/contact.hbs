{{> header}}

  <!-- CONTACT HEADER -->
  <section id="contact-head" class="bg-inverse text-white py-5">
    <div class="container">
      <!-- SMALL AND UP SCREENS -->
      <div class="row hidden-sm-down">
        <div class="col-2">
          <div class="text-center">
            <i class="fa fa-globe display-4"></i>
          </div>
        </div>
        <div class="col-8">
          <h3 class="text-center display-4">People Are Waiting To Find You</h3>
        </div>
        <div class="col-2">
          <div class="text-center">
            <i class="fa fa-globe display-4"></i>
          </div>
        </div>
      </div>
      <!-- PHONES SCREENS -->
      <div class="row hidden-md-up">
        <div class="col">
          <div class="text-center">
            <i class="fa fa-globe display-4"></i>
          </div>
          <h3 class="text-center display-4">People Are Waiting To Find You</h3>
      </div>
    </div>
  </section>


  <!-- CONTACT SECTION -->
  <section id="contact-section">
    <div class="dark-overlay pt-5">
      <div class="container">

        <form class="pt-5">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group text-center">
                <input type="text" class="form-control form-control-lg mb-2" placeholder="Name">
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group text-center">
                <input type="text" class="form-control form-control-lg" placeholder="Email">
              </div>
            </div>
          </div>

        <div class="row">
          <div class="col">
            <div class="form-group">
              <textarea name="Message" rows="8" class="form-control form-control-lg" placeholder="What vibes do you want to send out on the interwebs?"></textarea>
            </div>
            <div class="text-center">
              <input type="submit" class="btn btn-secondary btn-lg">
            </div>
          </div>
        </div>
      </form>
      </div>
    </div>
  </section>

  {{> footer}}
